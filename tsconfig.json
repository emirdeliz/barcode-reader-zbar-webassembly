{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "amd",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2021"],
    "target": "es5",
    "outDir": "./dist",
    "outFile": "./dist/barcode-reader.js",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}