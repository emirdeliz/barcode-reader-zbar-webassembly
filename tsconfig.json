{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2021"],
    "target": "es5",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}